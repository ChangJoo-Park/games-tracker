{
  "env": {
    "cypress/globals": true,
    "jest/globals": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/warnings",
    "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": ["cypress", "react", "import", "jest", "flowtype"],
  "rules": {
    "flowtype/space-after-type-colon": [2, "always", { "allowLineBreak": true }]
  }
}
